package Game;

import java.awt.image.BufferedImage;

public class Ball {
	private float x ;
	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public int getY() {
		return y;
	}
	public void update(){
		this.x += .00001f;
	}
	public void setY(int y) {
		this.y = y;
	}

	public BufferedImage getImage() {
		return image;
	}

	public void setImage(BufferedImage image) {
		this.image = image;
	}

	private int y;
	private BufferedImage image;
	public Ball(){
		
	}
	public Ball(BufferedImage image,int x,int y ){
		this.image = image;
		this.x = x;
		this.y = y;
	}
	

}
