public class MainFrame extends JFrame{
	JTextArea tx;
	JButton btn;
	public MainFrame(){
		setLayout(new BorderLayout());
		tx = new JTextArea();
		btn = new JButton("Click me ");
		
		setSize(500,400);
		
	}
	

}
